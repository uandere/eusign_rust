#================================================================================
 
CC = g++
CFLAGS = -Wno-error -O3 -ldl -lstdc++

#================================================================================

SRCS    = ./EUSignUsage.cpp
SRCS    += ./Interface/EUSignCP.cpp

#================================================================================

INCLUDES   = .
INCLUDES   += ./Interface

#================================================================================

OBJS = $(SRCS:.c=.o)

MAIN = EUSignUsage

.PHONY: clean

#================================================================================

all:    $(MAIN)

$(MAIN): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(MAIN) 

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $<  -o $@

#================================================================================

clean:
	$(RM) *.o *~ $(MAIN)

#================================================================================
